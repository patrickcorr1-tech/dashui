<Window x:Class="InvoiceScanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InvoiceScanner" Height="520" Width="820" WindowStartupLocation="CenterScreen" Background="#0B0E14">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0B0E14" Offset="0" />
                <GradientStop Color="#0E1320" Offset="0.6" />
                <GradientStop Color="#101827" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid Margin="28">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border CornerRadius="18" Background="#0F1522" Padding="18" BorderBrush="#1C2535" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="InvoiceScanner" FontSize="30" FontWeight="SemiBold" Foreground="#E6EDF3" />
                        <TextBlock Margin="0,6,0,0" Text="Manual sync from Outlook → OCR → Rename → Move to Documents\Scannedfiles" Foreground="#9FB1C5" />
                    </StackPanel>
                    <Border Grid.Column="1" CornerRadius="12" Background="#111827" Padding="10,6" BorderBrush="#1F2937" BorderThickness="1">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse Width="8" Height="8" Fill="#22C55E" Margin="0,0,8,0" />
                            <TextBlock Text="Ready" Foreground="#A7F3D0" FontSize="12" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Row="1" Margin="0,18,0,18" Background="#121826" CornerRadius="16" Padding="16" BorderBrush="#1E2A3B" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="SyncButton" Content="Sync Now" Width="150" Height="40" Style="{StaticResource PrimaryButton}" Click="SyncNow_Click" />
                    <Button Grid.Column="1" Content="Rules" Width="110" Height="40" Margin="12,0,0,0" Style="{StaticResource SecondaryButton}" Click="Rules_Click" />
                    <TextBlock Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="#7DD3FC" Text="Outlook: Scannedfiles → Processed" />
                </Grid>
            </Border>

            <Border Grid.Row="2" Background="#0F1522" CornerRadius="16" Padding="16" BorderBrush="#1E2A3B" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Activity Log" Foreground="#9FB1C5" />
                    <TextBox Grid.Row="1" x:Name="LogBox" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Background="#0B111D" Foreground="#D7E0EA" BorderBrush="#1E2A3B" />
                    <TextBlock Grid.Row="2" Margin="0,10,0,0" Text="itadmin OCR Tool" Foreground="#7DD3FC" HorizontalAlignment="Center" FontWeight="SemiBold" />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
