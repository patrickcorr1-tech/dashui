<Window x:Class="InvoiceScanner.Rules.RulesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rules" Height="520" Width="720" WindowStartupLocation="CenterOwner" Background="#0B0E14">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Detection Rules" FontSize="22" FontWeight="SemiBold" Foreground="#E6EDF3" />

        <ScrollViewer Grid.Row="1" Margin="0,16,0,16">
            <StackPanel>
                <TextBlock Text="Invoice Labels (one per line)" Foreground="#9FB1C5" />
                <TextBox x:Name="InvoiceLabelsBox" Margin="0,6,0,12" AcceptsReturn="True" Height="70" Background="#0F1522" Foreground="#D7E0EA" BorderBrush="#1E2A3B" />

                <TextBlock Text="Date Labels (one per line)" Foreground="#9FB1C5" />
                <TextBox x:Name="DateLabelsBox" Margin="0,6,0,12" AcceptsReturn="True" Height="70" Background="#0F1522" Foreground="#D7E0EA" BorderBrush="#1E2A3B" />

                <TextBlock Text="Ignore Words (one per line)" Foreground="#9FB1C5" />
                <TextBox x:Name="IgnoreWordsBox" Margin="0,6,0,12" AcceptsReturn="True" Height="70" Background="#0F1522" Foreground="#D7E0EA" BorderBrush="#1E2A3B" />

                <TextBlock Text="Company Suffixes (one per line)" Foreground="#9FB1C5" />
                <TextBox x:Name="CompanySuffixesBox" Margin="0,6,0,12" AcceptsReturn="True" Height="70" Background="#0F1522" Foreground="#D7E0EA" BorderBrush="#1E2A3B" />

                <TextBlock Text="Test OCR Text" Foreground="#9FB1C5" />
                <TextBox x:Name="OcrInputBox" Margin="0,6,0,10" AcceptsReturn="True" Height="120" Background="#0F1522" Foreground="#D7E0EA" BorderBrush="#1E2A3B" />
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="Test OCR" Width="110" Height="34" Style="{StaticResource SecondaryButton}" Click="TestOcr_Click" />
                    <TextBlock x:Name="TestResultText" Margin="12,6,0,0" Foreground="#7DD3FC" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="110" Height="38" Margin="0,0,12,0" Style="{StaticResource SecondaryButton}" Click="Cancel_Click" />
            <Button Content="Save" Width="120" Height="38" Style="{StaticResource PrimaryButton}" Click="Save_Click" />
        </StackPanel>
    </Grid>
</Window>
